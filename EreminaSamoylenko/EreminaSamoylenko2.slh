// 7. Статический класс для общей логики расчета
static class CalculateProbabilityCommand
{
    private static double humidity;
    private static double nightTemp;
    private static double dayTemp;

    public static void Execute(string operationType, Dictionary<string, CropData> database)
    {
        Console.Clear();
        Console.WriteLine("--------------------------------------------------------------------");
        Console.WriteLine($"РАСЧЕТ ВЕРОЯТНОСТИ {operationType} С ЭКСПЕРТНОЙ ОЦЕНКОЙ");
        Console.WriteLine("--------------------------------------------------------------------");

        // Выбор культуры
        Console.WriteLine("\nВыберите культуру для анализа:");
        int i = 1;
        foreach (var crop in database)
        {
            Console.WriteLine($"{i}. {crop.Value.Name}");
            i++;
        }
        Console.Write("Введите номер культуры: ");

        if (!int.TryParse(Console.ReadLine(), out int cropIndex) || cropIndex < 1 || cropIndex > database.Count)
        {
            Console.WriteLine("Некорректный выбор культуры!");
            Console.ReadKey();
            return;
        }

        string selectedCrop = "";
        int current = 1;
        foreach (var crop in database)
        {
            if (current == cropIndex)
            {
                selectedCrop = crop.Key;
                break;
            }
            current++;
        }

        var cropData = database[selectedCrop];

        // Ввод данных о погодных условиях
        var weatherData = GetWeatherData();

        // Используем фабрику для создания калькулятора
        var calculator = CalculatorFactory.CreateCalculator(operationType);
        var probability = calculator.CalculateProbability(cropData, weatherData);
        var recommendation = calculator.GetRecommendation(probability);

        // Вывод результатов
        DisplayResults(operationType, cropData, weatherData, probability, recommendation);
    }

    private static WeatherData GetWeatherData()
    {
        var weather = new WeatherData();

        Console.WriteLine("\nВведите данные о погодных условиях:");

        Console.Write("Температура днем (°C): ");
        while (!double.TryParse(Console.ReadLine(), out double dayTemp))
        {
            Console.Write("Некорректный ввод. Температура днем (°C): ");
        }
        weather.DayTemperature = dayTemp;

        Console.Write("Температура ночью (°C): ");
        while (!double.TryParse(Console.ReadLine(), out double nightTemp))
        {
            Console.Write("Некорректный ввод. Температура ночью (°C): ");
        }
        weather.NightTemperature = nightTemp;

        Console.Write("Влажность почвы (%): ");
        while (!double.TryParse(Console.ReadLine(), out double humidity))
        {
            Console.Write("Некорректный ввод. Влажность почвы (%): ");
        }
        weather.Humidity = humidity;

        Console.WriteLine("Погодные условия:");
        Console.WriteLine("1. Солнечно");
        Console.WriteLine("2. Облачно");
        Console.WriteLine("3. Дождь");
        Console.WriteLine("4. Снег");
        Console.Write("Выберите тип погоды (1-4): ");
        weather.WeatherType = Console.ReadLine();

        while (weather.WeatherType != "1" && weather.WeatherType != "2" &&
               weather.WeatherType != "3" && weather.WeatherType != "4")
        {
            Console.Write("Некорректный ввод. Выберите тип погоды (1-4): ");
            weather.WeatherType = Console.ReadLine();
        }

        return weather;
    }

    private static void DisplayResults(string operationType, CropData crop, WeatherData weather,
        double probability, string recommendation)
    {
        Console.WriteLine($"\nАнализ для: {crop.Name}");
        Console.WriteLine($"Оптимальные месяцы: {crop.OptimalMonths}");
        Console.WriteLine($"Оптимальная температура днем: {crop.MinDayTemp}°C - {crop.MaxDayTemp}°C");
        Console.WriteLine($"Минимальная температура ночью: {crop.MinNightTemp}°C");

        Console.WriteLine("\n--------------------------------------------------------------------");
        Console.WriteLine("РЕЗУЛЬТАТЫ РАСЧЕТА:");
        Console.WriteLine("--------------------------------------------------------------------");
        Console.WriteLine($"Температура днем: {weather.DayTemperature}°C");
        Console.WriteLine($"Температура ночью: {weather.NightTemperature}°C");
        Console.WriteLine($"Влажность почвы: {weather.Humidity}%");

        string weatherText = weather.WeatherType switch
        {
            "1" => "Солнечно",
            "2" => "Облачно",
            "3" => "Дождь",
            "4" => "Снег",
            _ => "Неизвестно"
        };
        Console.WriteLine($"Погодные условия: {weatherText}");

        Console.WriteLine("--------------------------------------------------------------------");
        Console.WriteLine($"ВЕРОЯТНОСТЬ УДАЧНОЙ {operationType}: {probability:P2}");
        Console.WriteLine($"РЕКОМЕНДАЦИЯ: {recommendation}");
        Console.WriteLine("--------------------------------------------------------------------");
        Console.WriteLine("\nНажмите любую клавишу для возврата в меню...");
        Console.ReadKey();
    }
}

