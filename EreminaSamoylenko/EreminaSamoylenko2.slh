// 1. Паттерн СТРАТЕГИЯ (Strategy) - разные алгоритмы расчета для посадки и сбора
interface IProbabilityCalculator
{
    double CalculateProbability(CropData crop, WeatherData weather);
    string GetRecommendation(double probability);
}

// 2. Паттерн ФАБРИКА (Factory) - создание калькуляторов
static class CalculatorFactory
{
    public static IProbabilityCalculator CreateCalculator(string operationType)
    {
        return operationType switch
        {
            "ПОСАДКИ" => new PlantingCalculator(),
            "СБОРА УРОЖАЯ" => new HarvestCalculator(),
            _ => throw new ArgumentException("Неизвестный тип операции")
        };
    }
}

// 3. Паттерн КОМАНДА (Command) - для пунктов меню
interface IMenuCommand
{
    void Execute();
}

// 4. Общие структуры данных
class CropData
{
    public string Name { get; set; }
    public int MinDayTemp { get; set; }
    public int MaxDayTemp { get; set; }
    public int MinNightTemp { get; set; }
    public double DayTempWeight { get; set; }
    public double NightTempWeight { get; set; }
    public double HumidityWeight { get; set; }
    public double WeatherWeight { get; set; }
    public string OptimalMonths { get; set; }
}

class WeatherData
{
    public double DayTemperature { get; set; }
    public double NightTemperature { get; set; }
    public double Humidity { get; set; }
    public string WeatherType { get; set; }
}

// 5. Реализации калькуляторов
class PlantingCalculator : IProbabilityCalculator
{
    public double CalculateProbability(CropData crop, WeatherData weather)
    {
        double dayTempScore = CalculateTemperatureScore(weather.DayTemperature, crop.MinDayTemp, crop.MaxDayTemp) * crop.DayTempWeight;
        double nightTempScore = (weather.NightTemperature >= crop.MinNightTemp ? 1.0 : 0.5) * crop.NightTempWeight;
        double humidityScore = (weather.Humidity >= 60 && weather.Humidity <= 80 ? 1.0 : 0.5) * crop.HumidityWeight;
        double weatherScore = CalculateWeatherScore(weather.WeatherType) * crop.WeatherWeight;

        return (dayTempScore + nightTempScore + humidityScore + weatherScore) / 4.0;
    }

    public string GetRecommendation(double probability)
    {
        return probability switch
        {
            < 0.4 => "Лучше воздержаться от посадки.",
            < 0.7 => "Стоит еще подождать, погода благоприятна лишь для посадки некоторых культур.",
            _ => "Большой процент успешной заготовки и дальнейшей высадки растений."
        };
    }

    private double CalculateTemperatureScore(double temp, int minTemp, int maxTemp)
    {
        if (temp >= minTemp && temp <= maxTemp) return 1.0;
        if (temp < minTemp - 5) return 0.1;
        if (temp < minTemp) return 0.5;
        if (temp > maxTemp + 5) return 0.5;
        if (temp > maxTemp) return 0.7;
        return 0.3;
    }

    private double CalculateWeatherScore(string weatherType)
    {
        return weatherType switch
        {
            "1" => 1.0,  // Солнечно
            "2" => 0.7,  // Облачно
            "3" => 0.5,  // Дождь
            "4" => 0.1,  // Снег
            _ => 0.5
        };
    }
}

class HarvestCalculator : IProbabilityCalculator
{
    public double CalculateProbability(CropData crop, WeatherData weather)
    {
        double dayTempScore = CalculateTemperatureScore(weather.DayTemperature, crop.MinDayTemp, crop.MaxDayTemp) * crop.DayTempWeight;
        double nightTempScore = (weather.NightTemperature >= crop.MinNightTemp ? 1.0 : 0.5) * crop.NightTempWeight;
        double humidityScore = CalculateHarvestHumidityScore(weather.Humidity, crop.Name) * crop.HumidityWeight;
        double weatherScore = CalculateWeatherScore(weather.WeatherType) * crop.WeatherWeight;

        return (dayTempScore + nightTempScore + humidityScore + weatherScore) / 4.0;
    }

    public string GetRecommendation(double probability)
    {
        return probability switch
        {
            < 0.4 => "Уборка не рекомендуется.",
            < 0.7 => "Стоит подождать или убирать с осторожностью.",
            _ => "Условия благоприятны для уборки урожая."
        };
    }

    private double CalculateTemperatureScore(double temp, int minTemp, int maxTemp)
    {
        if (temp >= minTemp && temp <= maxTemp) return 1.0;
        if (temp < minTemp - 5) return 0.1;
        if (temp < minTemp) return 0.5;
        if (temp > maxTemp + 5) return 0.5;
        if (temp > maxTemp) return 0.7;
        return 0.3;
    }

    private double CalculateWeatherScore(string weatherType)
    {
        return weatherType switch
        {
            "1" => 1.0,  // Солнечно
            "2" => 0.7,  // Облачно
            "3" => 0.2,  // Дождь
            "4" => 0.0,  // Снег
            _ => 0.5
        };
    }

    private double CalculateHarvestHumidityScore(double humidity, string crop)
    {
        return crop.ToLower() switch
        {
            "пшеница" => humidity < 60 ? 1.0 : 0.5,
            "кукуруза" => (humidity >= 50 && humidity <= 70) ? 1.0 : 0.5,
            "картофель" => (humidity >= 60 && humidity <= 70) ? 1.0 : 0.5,
            "клубника" => (humidity >= 60 && humidity <= 70) ? 1.0 : 0.5,
            _ => (humidity >= 60 && humidity <= 80) ? 1.0 : 0.5
        };
    }
}

